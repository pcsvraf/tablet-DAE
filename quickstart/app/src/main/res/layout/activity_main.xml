<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="73dp"
        android:layout_marginVertical="50dp"
        android:text="Califique de 1 a 7 la atención prestada por la Oficina de Atención de Estudiantes"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:textSize="47dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cara20"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/numero1"
            android:text="1"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara21"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/numero2"
            android:text="2"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara22"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/numero3"
            android:text="3"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara23"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/numero4"
            android:text="4"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara24"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/numero5"
            android:text="5"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara25"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/numero6"
            android:text="6"
            android:textSize="0dp" />

        <TextView
            android:id="@+id/cara26"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginVertical="150dp"
            android:background="@drawable/numero7"
            android:text="7"
            android:textSize="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="100dp"
        android:background="@color/lightorangedark"
        android:layout_marginVertical="450dp"
        android:id="@+id/linearLayout2">


        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton16"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:text="1" />

            <RadioButton
                android:id="@+id/radioButton17"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:text="2" />

            <RadioButton
                android:id="@+id/radioButton18"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="79dp"
                android:text="3" />

            <RadioButton
                android:id="@+id/radioButton19"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:text="4" />

            <RadioButton
                android:id="@+id/radioButton20"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="65dp"
                android:text="5" />

            <RadioButton
                android:id="@+id/radioButton21"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="52dp"
                android:text="6" />

            <RadioButton
                android:id="@+id/radioButton22"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="55dp"
                android:text="7" />
        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/BTNsiguiente5"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textotime4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="129dp"
        android:layout_marginHorizontal="90dp"
        android:layout_weight="1"
        android:background="@drawable/buttonstyleultimo"
        android:text="enviar"
        android:textSize="20dp"
        android:textColor="@color/blanco" />

    <Button
        android:id="@+id/volver"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textotime4"
        android:layout_alignStart="@+id/linearLayout"
        android:background="@drawable/buttonstylevolver"
        android:text="volver"
        android:textSize="20dp"
        android:textColor="@color/blanco" />


    <TextView
        android:id="@+id/textotime4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp" />


</RelativeLayout>